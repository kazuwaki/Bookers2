<h1>User info</h1>
 <p><%= image_tag @current_user.get_profile_image(100,100) %></p>
 <table>
   <tbody>
     <tr>
       <th>name</th>
       <th><%= @current_user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @current_user.introduction %></th>
     </tr>
   </tbody>
 </table>
 <div class="row">
  <div class="btn-user">
   <%= link_to edit_user_path(@current_user.id) do %><p><i class="fas fa-user-cog"></i></p><% end %>
 </div>
 </div>