  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		  <h1>Editing Book</h1>
        <%= render 'errors', book: @books %>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Opinion</h4>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <%= f.submit"Update Book" %>
        </div>
        <% end %>
        <p><%= link_to "Show",book_path(@book.id) %>|<%= link_to "Back","/books" %></p>
      </div>
    </div>
  </div>