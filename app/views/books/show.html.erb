<p class="text-success">
  <%= flash[:notice] %>
</p>
<h1>User info</h1>
<p><%= image_tag @book.user.get_profile_image(100,100) %></p>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to "Update User",edit_user_path(@book.user_id) %>

<h1>New book</h1>

  <%= form_with model: @books do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit"Create Book" %>
  <% end %>


<h1>Book detail</h1>
<table>
  <tbody>
    <tr>
      <td><%= link_to user_path(@book.user_id) do %><%= image_tag @book.user.get_profile_image(100,100) %></br><%= @book.user.name %><% end %></td>
      <td><%= link_to book_path do %><%= @book.title %><% end %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Edit",edit_book_path(@book.id) %></td>
      <td><%= link_to "destroy","/books/#{@book.id}", method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  </tbody>
</table>
