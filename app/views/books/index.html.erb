<% if @book.errors.any? %>
  <div class="errors">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    <% end %>
  </div>

<%= image_tag @book.user.get_profile_image(100,100) %>
<h1>User info</h1>
<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @book.user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @book.user.introduction %></th>
    </tr>
  </tbody>
</table>
<%= link_to"Update User", "/users/#{@book.user_id}/edit" %>


<h1>New book</h1>

<%= form_with model: @book do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit"Create Book" %>
<% end %>


<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to "/users/#{@book.user_id}" do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
      <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

