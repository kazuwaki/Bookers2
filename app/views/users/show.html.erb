
  <h1>User info</h1>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
 <table>
   <tbody>
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
     </tr>
   </tbody>
 </table>
 <%= link_to "プロフィール編集",edit_user_path(@user.id) %>

  <h1>New book</h1>

  <%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit"Create Book" %>
  <% end %>

  



<div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%=link_to user_path do %><%= image_tag book.user.get_profile_image(100,100) %><% end %></td>
        <td><%= link_to book_path(book.id) do %><%= book.title %><% end %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>