  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>User info</h1>
        <div class="errors">
        <% if @user.errors.any? %>
          
            <h2><%= @user.errors.count %> errors prohibited this book from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
             <% end %>
          </div>
            <%= form_with model: @user do |f| %>
              <h4>Name</h4>
              <%= f.text_field :name %>
              <h4>Image</h4>
              <%= f.file_field :profile_image, placeholder: "ファイルを選択", accept: "image/*" %>
              <h4>Introduction</h4>
              <%= f.text_area :introduction %>
              <div>
              <%= f.submit"Update User" %>
              </div>
              <% end %>
      </div>
    </div>
  </div>