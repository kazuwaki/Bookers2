<h1>User info</h1>
 <%= image_tag @user.get_profile_image(100,100) %>
 <table>
   <thead>
     <tr>
       <th>name</th>
       <th><%= @user.name %></th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <th>introduction</th>
       <td><%= @user.introduction %></td>
     </tr>
   </tbody>
 </table>
 <%= link_to "Update User",edit_user_path(@user.id) %>
 
 
 <h1>New book</h1>
 <%= form_with model: @book do |f| %>
 <h4>Title</h4>
 <%= f.text_field :title %>
 <h4>Opinion</h4>
 <%= f.text_area :body %>
 
 <%= f.submit"Create Book" %>
 <% end %>






 <h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to"Show",user_path(@user.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>